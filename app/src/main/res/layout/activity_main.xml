<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            style="@style/logo"
            android:src="@drawable/logo" />

        <LinearLayout style="@style/linearButton">

            <Button
                style="@style/buttonCall"
                android:drawableLeft="@drawable/ic_call_white_24dp"
                android:autoLink="phone"
                android:text="@string/call" />

            <Button
                style="@style/buttonMenu"
                android:drawableLeft="@drawable/ic_restaurant_menu_white_24dp"
                android:onClick="openMenu"
                android:text="@string/menu" />
        </LinearLayout>

        <TextView
            style="@style/moto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text" />

        <LinearLayout
            style="@style/linearInfo">
            <TextView
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                style="@style/infoText"
                android:text="@string/address" />

            <TextView
                android:drawableLeft="@drawable/ic_schedule_black_24dp"
                style="@style/infoText"
                android:text="@string/hours" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
